<div class="form-group w3layouts w3 w3l">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary()

        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Enter FirstName : </label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
            <div class="help-block with-errors"></div>
        </div>


        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Enter UserName : </label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
            <div class="help-block with-errors"></div>
        </div>


        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Enter Email Address : </label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <div class="help-block with-errors"></div>
        </div>


        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Choose Birth-Date : </label>
            @Html.EditorFor(model => model.BirthDate)
            @Html.ValidationMessageFor(model => model.BirthDate)
            <div class="help-block with-errors"></div>
        </div>

        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Please Select Gender : </label>
            @Html.EnumDropDownListFor(m => m.Sex)
            @Html.ValidationMessageFor(m => m.Sex)
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">Password : </label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group w3layouts w3 w3l">
            <label for="firstname" class="control-label">ConfirmPassword : </label>
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            <div class="help-block with-errors"></div>
        </div>


     

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Register" />
                </div>
            </div>
      
    }
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.10.4/themes/dark-hive/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.12.4.min.js"></script>
<script src="~/Scripts/jquery-ui-1.12.1.js"></script>
<script>
        $(document).ready(function () {
            var minDate = new Date();
            $("#Date").datepicker(
                {
                    showAnim: 'drop',
                    numberOfMonth: 1,
                    minDate: minDate,
                    dateFormat: 'yy-mm-dd',
                    onClose: function (selectedDate) {
                        $('#Date').datepicker("option", "minDate", selectedDate);
                    }
                });


        });
</script>
}
