@model IEnumerable<Green.Models.Bidders>

@{
    ViewBag.Title = "";
}

<center>
    <h2>
        <b>
            <i>

                <font color="red">List of Bidders:</font>
            </i>

        </b>

    </h2>
</center>


<body>


    <link href="~/Content/Productlisting.css" rel="stylesheet" />


    <div class="container">
        <div class="well well-sm">

            <center>
                <strong>KZNGBB Album</strong>
            </center>

        </div>
        <div id="products" class="row list-group">

            @foreach (var item in Model)
            {
                <div class="item  col-xs-4 col-lg-4">
                    <div class="thumbnail">
                        @if (item.Picture == null)
                        {
                            <img src="@Url.Content("~/images/user.jpg")" style="width: 350px; height: 250px" alt="" />
                        }
                        else
                        {
                            <img src="data:image/png;base64,@Convert.ToBase64String(item.Picture, 0, item.Picture.Length)" style="width: 350px; height: 250px" alt="" />
                        }

                        <div class="caption">
                            <center>
                                <strong>

                                    <p class="group inner list-group-item-text">
                                        @Html.DisplayFor(expression: modelItem => item.Name)

                                        @Html.DisplayFor(expression: modelItem => item.Year)

                                        @Html.DisplayFor(expression: modelItem => item.location)

                                    </p
                                    
                                </strong>
                            </center>
                            <div class="col-xs-12 col-md-offset-4">


                                <a href="@Url.Action("Download","AnnualRs", new { id=item.ID })" rel="tooltip" title="Download" class="btn btn-success btn-simple btn-xs"><i class="fa fa-download">Download</i></a>
                                @*@Html.ActionLink("Delete", "Delete", new { id=item.ID }) |*@
                            </div>
                        </div>
                    </div>
                </div>
            }

            </table>
